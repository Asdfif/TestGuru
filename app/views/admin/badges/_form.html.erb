
<%= form_with model: [:admin, @badge], local: true do |form| %>
<%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_title %><br>
  </p>

  <p>
    <%= form.label :img_url %><br>
    <%= form.text_field :img_url, id: :badge_img_url %><br>
  </p>

  <p>
    <%= form.label :rule_type %><br>
    <%= form.collection_select :rule_type, BadgeDepartamentService::RULES.keys, :itself, :to_s, {} %><br> 
  </p>

  <p>
    <%= form.label :rule_value %><br>
    <%= form.text_field :rule_value, id: :badge_rule_value %><br>
  </p>

  <%= form.submit %>
<% end %>
